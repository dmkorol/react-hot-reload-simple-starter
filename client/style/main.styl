// Plugins and mixins
@import 'jeet'

//edit()

* {
  box-sizing: border-box;
}

html {
  height: 100%;
}

.clearfix {
  &:before {
    content: " ";
    display: table;
  }
  &:after {
    clear: both;
    content: " ";
    display: table;
  }
}

#app {
  margin-left: auto;
  margin-right: auto;
  max-width: 940px;
  @extends .clearfix;
  +below('l') {
    max-width: 728px;
  }
  +below('s') {
    max-width: none;
  }
  border: 5px solid #cecece
  padding: 10px
}

$image-background {
    background-repeat: no-repeat
    height: 300px;
    width: @height
    background-size: @height @height
}

div.problem {
  background-image: url('./assets/images/problem')
  @extends $image-background
}

div.troll {
  background-image: url('./assets/images/trololo')
  @extends $image-background
}

div.mega {
  background-image: url('./assets/images/Mm2jp')
  @extends $image-background
}

.nav {
  list-style: none
  margin: 0
  padding: 0
  cf()
  li {
    col(1/3)
    background-color: #cecece
    text-align: center
    padding: 20px
    +below('m') {
      padding: 10px
      margin: 10px 0
      stack()
    }
  }
}
